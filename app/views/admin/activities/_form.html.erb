<%= simple_form_for([:admin, resource], html: { class: 'inline' }) do |form| %>
  <%= render 'error_notification', form: form %>
  <% form_attributes.each do |attr| %>
    <%= form.input attr %>
  <% end %>
  <%= form.input :image, label: "Image" %>
  <%= form.association :location, collection: @locations %>
  <%= form.submit "Save", class: "btn btn-default" %>
<% end %>
