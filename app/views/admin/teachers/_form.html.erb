<%= simple_form_for([:admin, resource], html: { class: 'inline' }) do |form| %>
  <%= render 'error_notification', form: form %>
  <%= form.input :name %>
  <%= form.input :email %>
  <%= form.select :grove_id, collection: current_user.groves.map{|x| [x.name, x.id]} %>
  <%= form.select :role_ids, Role.all.map{|r| [r.name, r.id]}, include_blank: true %>
  <%= form.submit "Save" %>
<% end %>
