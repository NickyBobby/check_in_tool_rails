<section class="playlist-manager">
  <h2>Grove Playlist Manager</h2>
  <span class="col-sm-12">
    <%= form_tag(admin_grove_playlist_manager_path, method: "get") do %>
      <%= label_tag(:student_search, "Search for:") %>
      <%= text_field_tag(:student_search) %>
      <%= submit_tag "Search", class: "btn btn-success" %>
      <%= link_to "All Students", admin_grove_playlist_manager_path, class: "btn hollow-btn" %>
    <% end %>
  </span>
  <%= render partial: "student", collection: collection %>
  <%= will_paginate collection %>
</section>

