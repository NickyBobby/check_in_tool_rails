<div class="grove-monitor text-center">
  <h2>Grove Monitor</h2>
</div>

<ul class="nav nav-pills">
  <li role="presentation" class="active"><%= link_to "All", admin_grove_monitor_all_path %></li>
  <li role="presentation" class="active"><%= link_to "Absent", admin_grove_monitor_path(filter: :absent) %></li>
  <li role="presentation" class="active"><%= link_to "Lost", admin_grove_monitor_path(filter: :lost) %></li>
  <% @presenter.locations.keys.each do |location| %>
    <li role="presentation" class="active"><%= link_to location, admin_grove_monitor_path({filter: :location, name: location}) %></li>
  <% end %>
</ul>

<div class="container">
  <div class="row">

    <h2>Lost</h2>

    <%= render partial: "student", collection: @presenter.lost_students %>

    <h2>Absent</h2>

    <%= render partial: "student", collection: @presenter.absent_students %>

    <% @presenter.locations.keys.each do |location| %>
      <h2><%= location %></h2>

      <%= render partial: "student", collection: @presenter.locations[location] %>

    <% end %>
  </div>
</div>
